<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shubham.moviewala">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/moviewala"
        android:label="@string/app_name"
        android:roundIcon="@drawable/moviewala"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="MovieWala"></activity>
        <activity android:name=".MovieDetails" />
        <activity android:name=".TVshowDetails" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".WatchlistActivity" />
        <activity android:name=".MovieDetailsShow" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TVDetailsShow"></activity>
    </application>

</manifest>